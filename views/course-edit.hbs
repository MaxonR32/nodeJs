<h1>Edit the {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
	<div class="input-field">
        <input placeholder="title" name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Name of course</label>
  		<span class="helper-text" data-error="Type name"></span>
    </div>

    <div class="input-field col s6">
        <input placeholder="Pirce" name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="Type price"></span>
    </div>

    <div class="input-field col s6">
        <input placeholder="image" name="img" id="image" type="text" class="validate" value="{{course.img}}">
        <label for="image">Images URL</label>
        <span class="helper-text" data-error="Type URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    
    <button type="submit" class="btn primary">Edit</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id", value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red">Delete</button>
</form>