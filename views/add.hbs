<h1>Add new courses</h1>
{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="POST" novalidate>
	<div class="input-field">
        <input placeholder="title" name="title" id="title" type="text" class="validate" value="{{data.title}}" required>
        <label for="title">Name of course</label>
  		<span class="helper-text" data-error="Type name"></span>
    </div>

    <div class="input-field col s6">
        <input placeholder="Pirce" name="price" id="price" type="number" class="validate" value="{{data.price}}" required min="1">
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="Type price"></span>
    </div>

    <div class="input-field col s6">
        <input placeholder="image" name="img" id="image" type="text" class="validate" value="{{data.img}}">
        <label for="image">Images URL</label>
        <span class="helper-text" data-error="Type URL"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn primary">Add Course</button>
</form>