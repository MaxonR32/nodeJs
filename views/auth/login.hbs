<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Log In</a></li>
        <li class="tab col s6"><a href="#register">Sign In</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      <h3>Enter in shop</h3>
      <form action="/auth/login" method="POST">
       
        <div class="input-field">
          <input placeholder="Email" name="email" id="lemail" type="text" class="validate" required>
          <label for="lemail">Email</label>
          <span class="helper-text" data-error="Type Email"></span>
        </div>

        <div class="input-field">
          <input placeholder="Password" name="password" id="lpassword" type="password" class="validate" required min="1">
          <label for="lpassword">Password</label>
          <span class="helper-text" data-error="Enter passsword"></span>
        </div>

        <p><a href="/auth/reset">Forgot your password?</a></p>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn">Log In</button>
      </form>
    </div>


    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}
      <h3>Create account</h3>
      <form action="/auth/register" method="POST">
        <div class="input-field">
          <input placeholder="Email" name="email" id="email" type="text" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Type Email"></span>
        </div>

        <div class="input-field">
          <input placeholder="Password" name="password" id="password" type="password" class="validate" required min="1">
          <label for="password">Password</label>
          <span class="helper-text" data-error="Enter passsword"></span>
        </div>

        <div class="input-field">
          <input placeholder="Confirm password" name="confirm" id="confirm" type="password" class="validate" required min="1">
          <label for="confirm">Confirm password</label>
          <span class="helper-text" data-error="Enter passsword"></span>
        </div>

        <div class="input-field">
          <input placeholder="Confirm password" name="name" id="name" type="text" class="validate" required min="1">
          <label for="name">Name</label>
          <span class="helper-text" data-error="Enter passsword">Type name</span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn" type="submit">Sign In</button>
      </form>
    </div>
  </div>
</div>
