<div class="row">
  <div class="col s6 offset-s3">
    {{#if error}}
      <p class="alert">{{error}}</p>
    {{/if}}
    <h3>Reset a password</h3>
    <form action="/auth/password" method="POST">
      <div class="input-field">
        <input placeholder="Email" name="password" id="password" type="password" class="validate" required>
        <label for="lemail">New Password</label>
        <span class="helper-text" data-error="Type Email"></span>
      </div>

      
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <input type="hidden" name="userId" value="{{userId}}">
      <input type="hidden" name="token" value="{{token}}">
      <button class="btn">New password</button>
    </form>
  </div>
</div>
